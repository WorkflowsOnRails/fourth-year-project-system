<% content_for :banner do %>
  Projects

  <% if policy(Project.new).create? %>
    <%= link_to 'Create Project', new_project_path,
        class: 'btn btn-primary pull-right' %>
  <% end %>
<% end %>

<table class="table table-hover table-condensed projects-table">
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td class="projects-table-name">
          <%= link_to project.name, project_path(id: project.id) %>
        </td>
        <td class="projects-table-actions table-actions">
          <% if policy(project).destroy? %>
            <%= button_to "Delete",
                {controller: :projects, action: :destroy, id: project.id},
                method: :delete, class: 'btn btn-xs btn-warning',
                data: { confirm: 'Are you sure you want to delete this project?' }
                %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <thead>
    <th>Project Name</th>
    <th></th>
  </thead>
</table>
