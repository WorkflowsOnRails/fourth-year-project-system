<% content_for :banner do %>
  Projects

  <% if policy(Project.new).create? %>
    <%= link_to 'Create Project', new_project_path,
        class: 'btn btn-primary pull-right' %>
  <% end %>
<% end %>

<table class="table table-hover table-condensed projects-table">
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td class="projects-table-name">
          <%= link_to project.name, project_path(id: project.id) %>
        </td>
        <td class="projects-table-supervisor">
          <% project.supervisors.each do |supervisor| %>
            <%= supervisor.full_name %>
          <% end %>
        </td>
        <td class="projects-table-members">
          <% project.group_members.each do |member| %>
            <%= member.full_name %>
          <% end %>
        </td>
        <td class="projects-table-programmes">
          <% project.programmes.each do |programme| %>
            <%= programme.programme %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
  <thead>
    <th>Project Name</th>
    <th>Supervisors</th>
    <th>Group Members</th>
    <th>Programmes</th>
    <th></th>
  </thead>
</table>
