<% content_for :banner do %>
  Create Project
<% end %>

<%= simple_form_for @project do |f| %>

  <div class="form-inputs">
    <%= f.input :name, required: true %>
    <%= f.input :description %>

    <% if current_user.is_coordinator? %>
      <%= f.input :supervisors, collection: @supervisors, required: true, as: :select, 
          label_method: :full_name, value_method: :id %>
    <% else %>
      <%= f.input :supervisors, as: :hidden, input_html: { value: current_user.id } %>
    <% end %>

    <%= f.input :programmes, collection: Programme::PROGRAMMES, required: true, as: :check_boxes %>
  </div>

  <%= bootstrap_form_buttons do %>
    <%= f.button :submit, "Create", class: 'btn btn-success'%>
    <%= link_to "Cancel", :back, class: 'btn btn-default' %>
  <% end %>

<% end %>
