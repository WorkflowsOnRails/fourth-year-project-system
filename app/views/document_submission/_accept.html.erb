<%= form_for [taskable.task, FeedbackEvent.new],
    url: url_for(controller: controller_name, action: :accept, only_path: true),
    html: {role: 'form'} do |f| %>
  <%= f.hidden_field :submission_event_id,
      value: @last_submission_event.id %>
  <%= f.hidden_field :accepted, value: '1' %>
  <div class="form-group">
    <%= f.text_area :comment, class: 'form-control',
        placeholder: 'Add comments or feedback' %>
  </div>
  <div class="form-group text-right">
    <%= f.submit "Accept Submission", class: 'btn btn-success' %>
  </div>
<% end %>
