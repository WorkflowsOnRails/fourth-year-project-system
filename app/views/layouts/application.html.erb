<!DOCTYPE html>
<html>
  <head>
    <title>SYSC 4907</title>
    <%= stylesheet_link_tag "application", media: "all",
        "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-default" role="navigation">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle"
                data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
          <li class="<%= nav_class_for_controller('tasks') %>">
            <%= link_to 'Your Tasks', tasks_path %>
          </li>
          <li class="<%= nav_class_for_controller('projects') %>">
            <%= link_to 'Projects', projects_path %>
          </li>
          <% end %>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if user_signed_in? %>
            <li>
              <%= link_to current_user.email, edit_user_registration_path,
                  class: 'navbar-link' %>
            </li>
            <li>
              <%= link_to destroy_user_session_path,
                  method: :delete, class: 'navbar-link' do %>
                logout
                <span class="glyphicon glyphicon-log-out"></span>
              <% end %>
            </li>
          <% else %>
            <li>
              <%= link_to 'Sign in', new_user_session_path,
                  class: 'navbar-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class="flashes">
      <div class="no-margin-collapse">&nbsp;</div>
      <% flash.each do |name, message| %>
        <div class="alert alert-<%= name %>">
          <%= message %>
        </div>
      <% end %>
    </div>

    <div class="body">
      <div class="banner-header">
        <div class="banner">
          <h1><%= yield :banner %></h1>
          <div>
            <span class="corner-bottom corner-left"></span>
            <span class="corner-bottom corner-right"></span>
          </div>
        </div>
      </div>
      <div class="content">
        <%= yield %>
      </div>
    </div>
  </body>
</html>
