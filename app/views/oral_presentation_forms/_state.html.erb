<div>
  <label>Deadline:</label>
  <%= render_datetime taskable.task.deadline.timestamp %>
</div>
<div>
  <label>Participants who have not accepted the form:</label>
  <ul>
    <% @taskable.pending_users.each do |user| %>
    <li>
      <%= mail_to user.email, user.full_name %>
    </li>
    <% end %>
  </ul>
</div>
